@page
@model PPTT.Pages.Administradores.CreateModel

@{
    ViewData["Title"] = "Crear Usuario";
}
<div class="page-content">
    <div class="form-alta">
        <div class="formulario">
            <legend>Alta de Usuario</legend>
            <hr />
            <form method="post">
                <fieldset>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row-inputs">
                    <div class="form-group">
                        <label asp-for="Admin.Nombre" class="control-label"></label>
                            <input required asp-for="Admin.Nombre" class="form-control" placeholder="Nombre" pattern="[A-Za-z\s]+" title="Solo se permiten letras y espacios." />
                        <span asp-validation-for="Admin.Nombre" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Admin.Apellido" class="control-label"></label>
                            <input required asp-for="Admin.Apellido" class="form-control" placeholder="Apellido" pattern="[a-zA-Z]" title="Solo se permiten letras." />
                        <span asp-validation-for="Admin.Apellido" class="text-danger"></span>
                    </div>
                </div>
                <div class="row-inputs">
                    <div class="form-group">
                        <label asp-for="Admin.DNI" class="control-label"></label>
                            <input required asp-for="Admin.DNI" class="form-control" placeholder="Número de Documento" min="1000000" max="99999999"  title="Debe ingresar al menos 8 dígitos." />
                        <span asp-validation-for="Admin.DNI" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Admin.Numero_Control" class="control-label"></label>
                            <input required asp-for="Admin.Numero_Control" class="form-control" placeholder="Número de Control" />
                        <span asp-validation-for="Admin.Numero_Control" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Admin.Correo" class="control-label"></label>
                        <input required asp-for="Admin.Correo" class="form-control" placeholder="Correo Institucional: 'correo@faa.mil.ar' " />
                    <span asp-validation-for="Admin.Correo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Admin.ID_Division_Fk" class="control-label"></label>
                    <select asp-for="Admin.ID_Division_Fk"
                            asp-items="Model.Divisions.Select(d => new SelectListItem
                                {
                                    Value = d.ID_Division_Pk.ToString(),
                                    Text = d.Descripcion_Division
                                })"
                            id="deptSelect"
                            class="form-control">
                        <option hidden selected value="">Seleccione el Organismo</option>
                    </select>
                    <span asp-validation-for="Admin.ID_Division_Fk" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Admin.ID_Servicio_Fk" id="servicioLabel" class="control-label"></label>
                    <select asp-for="Admin.ID_Servicio_Fk" id="servicioSelect" class="form-control">
                        <option hidden selected value="">Seleccione el servicio correspondiente</option>
                    </select>
                    <span asp-validation-for="Admin.ID_Servicio_Fk" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Crear" class="submit-log" />
                </div>
                    </fieldset>
            </form>
        </div>
    </div>
    <div class="centered-button">
        <a class="btn-action" asp-page="../Vistas/IndexLogueado">Volver al menú</a> |
        <a class="btn-action" asp-page="./Index">Ir lista de usuarios</a>
    </div>
</div>
<style>
    .page-content {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        min-height: 85vh;
        background-color: #f0f2f5; /* Color de fondo opcional */
    }

    .row-inputs {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        gap: 20px;
    }

        .row-inputs .form-group {
            width: 48%;
        }

    .form-alta {
        display: flex;
        justify-content: center;
        align-content: center;
        align-items: center;
        flex-direction: column;               
        width: 45vw;
        background-color: #ffffff;          
        border: 1px solid #c2d3e0;
        border-radius: 10px;
        box-shadow: 0px 4px 12px rgba(0, 61, 107, 0.1);
    }

    .formulario {
        padding: 10px;
    }

    .titulo-form {
        background-color: #003d6b;
        color: #fcfcfc;
        width: 100%;
        text-align: center;               
    }

    .form-control, label, h4 {
        font-size: 1em;
    }

    .form-control {
        width: 100%;
        padding: 8px;
        margin-bottom: 15px;
        border: 1px solid #003d6b;
        border-radius: 4px;
        background-color: white;
    }

    input[type=number]::-webkit-inner-spin-button,
    input[type=number]::-webkit-outer-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    input[type=number] {
        -moz-appearance: textfield;
    }

    .submit-log {
        width: 100%;
        background-color: #003d6b;
        color: white;
        padding: 12px 0;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 1.1em;        
        text-align: center;
        transition: background-color 0.3s, transform 0.2s;
    }

        .submit-log:hover {
            background-color: #002e5d;
        }

        .submit-log:active {
            background-color: #001f3f;
            transform: scale(0.98);
        }

    fieldset {
        border: none;
        padding: 0;
        margin: 0;
    }

    legend {
        font-size: 1.2em;
        color: #003d6b;
        margin-bottom: 15px;        
        text-align: center;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script type="text/javascript">
        $(document).ready(function () {
            $('#servicioLabel').hide();
            $('#servicioSelect').hide();
            $('#deptSelect').change(function () {
                var selectedDivision = $(this).val();
                if (selectedDivision) {
                    $.ajax({
                        url: '@Url.Page("./Create", "ServiciosByDivision")',
                        type: 'GET',
                        data: { division: selectedDivision },
                        success: function (data) {
                            var servicioSelect = $('#servicioSelect');
                            servicioSelect.empty();
                            servicioSelect.append('<option hidden selected value="">Seleccione el servicio correspondiente</option>')
                            $.each(data, function (index, servicio) {
                                servicioSelect.append('<option value="' + servicio.iD_Servicio_Pk + '">' + servicio.descripcion_Servicio + '</option>')
                            });
                            $('#servicioLabel').fadeIn(500);
                            $('#servicioSelect').fadeIn(500);
                        }
                    })
                }
            })
        })
    </script>
}
