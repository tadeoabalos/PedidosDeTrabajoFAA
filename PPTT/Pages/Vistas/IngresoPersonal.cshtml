@page
@model PPTT.Pages.Vistas.IngresoPersonalModel
@{
}

<body>
    <form method="post" class="form-log">
        <fieldset>
            <legend>Ingreso Personal</legend>
            <hr />

            <!-- Mostrar mensaje de error si las credenciales son incorrectas -->
            @if (TempData["CredencialesFallidas"] != null)
            {
                <div class="alert alert-danger">
                    @ModelState[""]?.Errors.FirstOrDefault()?.ErrorMessage
                </div>
            }

            <div>
                <input type="text" id="DNI" name="DNI"  required placeholder="DNI" />
            </div>
            <div>
                <input type="text" id="NumerodeControl" name="NumerodeControl" required placeholder="Número de control" />
            </div>
            <div class="password-container">
                <input type="password" id="Contraseña" name="Contraseña" required placeholder="Contraseña" />
                <button type="button" class="toggle-password" onclick="togglePassword()">Mostrar</button>
            </div>
            <hr />
            <div class="login-botton">
                <input type="submit" value="Ingresar" class="submit-log" />
                <a href="/Vistas/OlvideContraseña">Olvidé Mi Contraseña</a>
            </div>
        </fieldset>
    </form>

    <script>
        function togglePassword() {
            const passwordInput = document.getElementById('Contraseña');
            const toggleButton = document.querySelector('.toggle-password');
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleButton.textContent = 'Ocultar';
            } else {
                passwordInput.type = 'password';
                toggleButton.textContent = 'Mostrar';
            }
        }
    </script>
</body>


<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f8fb; /* Suave azul claro */
        color: #003d6b;
        margin: 0;
        padding: 0;
    }

    .form-log {
        width: 30vw;
        margin: 30px auto;
        padding: 25px;
        background-color: #ffffff;
        border: 1px solid #c2d3e0;
        box-shadow: 0px 4px 12px rgba(0, 61, 107, 0.1);
    }

    fieldset {
        border: none;
        padding: 0;
        margin: 0;
    }

    legend {
        font-size: 1.2em;
        color: #003d6b;
        margin-bottom: 15px;
        font-weight: bold;
        text-align: center;
    }

    label {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
        color: #003d6b;
    }

    input[type="text"],
    input[type="password"] {
        width: 100%;
        padding: 10px;
        margin-bottom: 15px;
        border: 1px solid #c2d3e0;
        border-radius: 5px;
        background-color: #f9fbfd;
        font-size: 1em;
    }

        input[type="text"]:focus,
        input[type="password"]:focus {
            border-color: #003d6b;
            outline: none;
        }

    .submit-log {
        width: 100%;
        background-color: #003d6b;
        color: white;
        padding: 12px 0;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 1.1em;
        font-weight: bold;
        text-align: center;
        transition: background-color 0.3s, transform 0.2s;
    }

        .submit-log:hover {
            background-color: #002e5d;
        }

        .submit-log:active {
            background-color: #001f3f;
            transform: scale(0.98);
        }

    .login-botton {
        text-align: center;
        margin-top: 20px;
    }

        .login-botton a {
            color: #003d6b;
            text-decoration: none;
            font-size: 0.9em;
        }

            .login-botton a:hover {
                text-decoration: underline;
            }

    .password-container {
        position: relative;
    }

    .toggle-password {
        position: absolute;
        right: 10px;
        top: 50%;
        transform: translateY(-50%);
        background: none;
        border: none;
        color: #003d6b;
        cursor: pointer;
        font-size: 0.9em;
        padding: 5px;
    }
    
    .alert {
        color: red;
        background-color: white;
        padding: 10px;
        margin-bottom: 15px;
        border-radius: 5px;
        border-color:red;
    }

</style>