                    <option hidden selected value="">Seleccione el Grado</option>
                </select>
                <span asp-validation-for="PedidoTrabajo.ID_Grado_Fk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PedidoTrabajo.RTI_Solicitante" class="control-label"></label>
                <input asp-for="PedidoTrabajo.RTI_Solicitante" class="form-control" />
                <span asp-validation-for="PedidoTrabajo.RTI_Solicitante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PedidoTrabajo.ID_Organismo_Fk" class="control-label"></label>
                <select asp-for="PedidoTrabajo.ID_Organismo_Fk"
                        asp-items="Model.Organismos.Select(d=> new SelectListItem
                        {
                            Value = d.ID_Organismo_PK.ToString(),
                            Text = d.Descripcion_organismo.ToString()
                        })"
