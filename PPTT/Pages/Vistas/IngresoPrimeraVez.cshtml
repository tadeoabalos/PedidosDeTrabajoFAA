@page
@model PPTT.Pages.Vistas.IngresoPrimeraVezModel

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f8fb; /* Suave azul claro */
        color: #003d6b;
        margin: 0;
        padding: 0;
    }

    .form-log {
        width: 30vw;
        margin: 30px auto;
        padding: 25px;
        background-color: #ffffff;
        border: 1px solid #c2d3e0;        
        box-shadow: 0px 4px 12px rgba(0, 61, 107, 0.1);
    }

    fieldset {
        border: none;
        padding: 0;
        margin: 0;
    }

    legend {
        font-size: 1.2em;
        color: #003d6b;
        margin-bottom: 15px;
        font-weight: bold;
        text-align: center;
    }

    label {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
        color: #003d6b;
    }

    input[type="text"],
    input[type="password"] {
        width: 100%;
        padding: 10px;
        margin-bottom: 15px;
        border: 1px solid #c2d3e0;
        border-radius: 5px;
        background-color: #f9fbfd;
        font-size: 1em;
    }

        input[type="text"]:focus,
        input[type="password"]:focus {
            border-color: #003d6b;
            outline: none;
        }

    .submit-log {
        width: 100%;
        background-color: #003d6b;
        color: white;
        padding: 12px 0;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 1.1em;
        font-weight: bold;
        text-align: center;
        transition: background-color 0.3s, transform 0.2s;
    }

        .submit-log:hover {
            background-color: #002e5d;
        }

        .submit-log:active {
            background-color: #001f3f;
            transform: scale(0.98);
        }

    .login-botton {
        text-align: center;
        margin-top: 20px;
    }

        .login-botton a {
            color: #003d6b;
            text-decoration: none;
            font-size: 0.9em;
        }

            .login-botton a:hover {
                text-decoration: underline;
            }

    .password-container {
        position: relative;
    }

    .toggle-password {
        position: absolute;
        right: 10px;
        top: 50%;
        transform: translateY(-50%);
        background: none;
        border: none;
        color: #003d6b;
        cursor: pointer;
        font-size: 0.9em;
        padding: 5px;
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var form = document.getElementById("IngresoPrimeraVez");

        form.addEventListener("submit", function (event) {
            var nuevaContraseña = document.getElementsByName("NuevaContraseña")[0].value;
            var confirmacionContraseña = document.getElementsByName("ConfirmacionContraseña")[0].value;

            if (nuevaContraseña !== confirmacionContraseña) {
                alert("Las contraseñas no coinciden.");
                event.preventDefault(); 
            }
        });
    });
</script>

<body>
    <form method="post" id="IngresoPrimeraVez" class="form-log">
        <fieldset>
            <legend>Cambiar Contraseña</legend>
            <hr />
            <div>
                <label for="DNI">DNI:</label>
                <input type="text" id="DNI" name="DNI" value="" required />
            </div>
            <div>
                <label for="Numero de Control">Numero de Control:</label>
                <input type="text" asp-for="NumeroDeControl" id="NumeroDeControl" name="NumeroDeControl " value="" required />
            </div>
            <div>
                <label for="ViejaContraseña">Contraseña Anterior:</label>
                <input type="password" id="ViejaContraseña" name="ViejaContraseña" value="" required />
            </div>
            <div>
                <label for="NuevaContraseña">Nueva Contraseña:</label>
                <input type="password" id="NuevaContraseña" name="NuevaContraseña" value="" required />
            </div>
            <div>
                <label for="ConfirmacionContraseña">Confirma Tu Contraseña:</label>
                <input type="password" id="ConfirmacionContraseña" name="ConfirmacionContraseña" value="" required />
            </div>
            <hr />
            <div>
                <input type="submit" value="Enviar" class="submit-log" />
            </div>
        </fieldset>
    </form>
</body>
