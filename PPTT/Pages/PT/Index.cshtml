<script>
    document.addEventListener("DOMContentLoaded", function () {
        const $btnExportar = document.querySelector("#btnExportar"),
            $tabla = document.querySelector("#tabla");

        $btnExportar.addEventListener("click", function () {
            // Crear una nueva tabla para la exportación
            let exportTable = document.createElement('table');
            let exportTbody = document.createElement('tbody');
            exportTable.appendChild(exportTbody);

            // Agregar encabezados a la tabla exportada (excluyendo las columnas ignoradas)
            const headers = Array.from($tabla.querySelectorAll('thead th'));
            const newRow = document.createElement('tr');

            headers.forEach((header, index) => {
                // Ignorar los índices 12 y 14 (o los que desees ignorar)
                if (index !== 12 && index !== 14) {
                    let th = document.createElement('th');
                    th.innerText = header.innerText;
                    newRow.appendChild(th);
                }
            });
            exportTbody.appendChild(newRow);

            // Recorrer las filas de la tabla original y agregar los datos a la tabla exportada
            Array.from($tabla.querySelectorAll('tbody tr')).forEach(row => {
                let newRow = document.createElement('tr');
                Array.from(row.querySelectorAll('td')).forEach((cell, index) => {
                    // Ignorar las columnas que no deseas exportar
                    if (index !== 12 && index !== 14) {
                        let td = document.createElement('td');
                        if (index === 11) { // Supongamos que la columna de Prioridad es la número 12 (índice 11)
                            // Obtener el valor del select
                            const select = cell.querySelector('select');
                            td.innerText = select ? select.options[select.selectedIndex].text : ''; // Solo el texto de la opción seleccionada
                        } else {
                            td.innerText = cell.innerText; // Texto normal
                        }
                        newRow.appendChild(td);
                    }
                });
                exportTbody.appendChild(newRow);
            });

            // Exportar a Excel
            let wb = XLSX.utils.table_to_book(exportTable, {
                sheet: "Trabajos"
            });
            XLSX.writeFile(wb, 'Reporte de Pedidos de Trabajo.xlsx');
        });
    });
</script>

