        @foreach (var item in Model.PedidoTrabajo)
        {
            @if (item.ID_Estado_Fk != 1004)
            {
                <tr data-fecha="@item.Fecha_Subida?.ToString("yyyy-MM-dd") ?? " 0001-01-01"">
                    <td>@Html.DisplayFor(modelItem => item.ID_Orden_Fk)</td>
                    <td>
